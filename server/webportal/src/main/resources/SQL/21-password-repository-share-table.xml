<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="21" author="Danilov">
        <createTable tableName="password_repository_share">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_repository_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="password_repository_share" columnNames="id"/>

        <addForeignKeyConstraint baseTableName="password_repository" baseColumnNames="password_repository_id" constraintName="password_repository_share_repository_fk"
                                 referencedTableName="password_repository"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseTableName="password_repository" baseColumnNames="account_id" constraintName="password_repository_share_account_fk"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>