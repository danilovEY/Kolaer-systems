<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="7" author="Danilov">
        <createTable tableName="passport">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="number" type="VARCHAR(6)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="serial" type="VARCHAR(6)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="passport" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="passport" baseColumnNames="employee_id" constraintName="passport_employee_fk"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>