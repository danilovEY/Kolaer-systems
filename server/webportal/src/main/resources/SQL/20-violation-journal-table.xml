<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20" author="Danilov">
        <createTable tableName="violation_journal">
            <column name="id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="writer_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="department_id" type="BIGINT"/>
        </createTable>
        <addPrimaryKey tableName="violation_journal" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="violation_journal" baseColumnNames="writer_id" constraintName="violation_journal_writer_fk"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="violation_journal" baseColumnNames="department_id" constraintName="violation_journal_department_fk"
                                 referencedTableName="department"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>