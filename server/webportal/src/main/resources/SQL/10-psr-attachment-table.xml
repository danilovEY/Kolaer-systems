<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="10" author="Danilov">
        <createTable tableName="psr_attachment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="path_file" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="psr_register_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="psr_attachment" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="psr_attachment" baseColumnNames="psr_register_id" constraintName="psr_attachment_project_fk"
                                 referencedTableName="psr_register"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>