<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="11" author="Danilov">
        <createTable tableName="psr_register">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="comment" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
            <column name="date_close" type="TIMESTAMP"/>
            <column name="date_open" type="TIMESTAMP"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="admin_id" type="BIGINT"/>
            <column name="status" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="psr_register" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="psr_register" baseColumnNames="author_id" constraintName="psr_register_author_fk"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="psr_register" baseColumnNames="admin_id" constraintName="psr_register_admin_fk"
                                 referencedTableName="employee"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>