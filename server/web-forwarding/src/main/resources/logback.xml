<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>web - %date [%thread] %-5level %logger{36} - %message%n
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/%d{yyyy-MM-dd}_web-forwarding.log</fileNamePattern>

            <!-- keep 30 days' worth of history -->
            <maxHistory>15</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%-25(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{36}.%method: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="WARN" />

    <!-- in order to debug some marshalling issues, this needs to be TRACE  <appender-ref ref="STDOUT" />-->
    <logger name="org.springframework.web.servlet.mvc" level="WARN" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>