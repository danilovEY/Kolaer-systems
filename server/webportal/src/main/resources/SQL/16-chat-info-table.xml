<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="16" author="Danilov">
        <createTable tableName="chat_info">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="command" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="create_info" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="chat_info" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="chat_info" baseColumnNames="account_id" constraintName="info_from_account_fk"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="16-1" author="Danilov">
        <addColumn tableName="chat_info">
            <column name="data" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="16-2" author="Danilov">
        <addNotNullConstraint tableName="chat_info" columnName="account_id" columnDataType="BIGINT"/>
    </changeSet>

    <changeSet id="16-3" author="Danilov">
        <addColumn tableName="chat_info">
            <column name="to_account_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="chat_info" baseColumnNames="to_account_id" constraintName="info_to_account_fk"
                                 referencedTableName="account"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>